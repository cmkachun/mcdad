[Rule]
# 1. 只要是 img.mcd.cn 下面的 mp4 视频，不管叫什么名字，一律屏蔽
URL-REGEX, ^https?:\/\/img\.mcd\.cn\/.*\.mp4(\?.*)?$, REJECT

# 2. 封锁麦当劳所有已知的素材目录 (防止它换到 /assets/ 或 /video/)
URL-REGEX, ^https?:\/\/img\.mcd\.cn\/(cms|assets|video|app)\/.*$, REJECT-DICT

# 3. 封锁广告上报，让它即便播了广告也无法完成统计
DOMAIN, tracking.mcdonalds.com.cn, REJECT
