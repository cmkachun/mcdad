[Rule]
# 拦截所有视频后缀，解决 75f3...mp4 这种随机地址
URL-REGEX, ^https?:\/\/img\.mcd\.cn\/.*\.mp4(\?.*)?$, REJECT
# 封锁统计域名
DOMAIN, tracking.mcdonalds.com.cn, REJECT
DOMAIN, c.mcd.cn, REJECT

[Script]
# 拦截新域名的首页布局（隐藏空白的关键）和版本配置
http-response ^https:\/\/api2?\.mcd\.cn\/bff\/portal\/(version\/mdl|home) script-path=https://raw.githubusercontent.com/cmkachun/mcdad/main/mcd_ads.js, requires-body=true, tag=麦当劳去广告

[MITM]
# 必须包含 api2.mcd.cn
hostname = api.mcd.cn, api2.mcd.cn, img.mcd.cn
